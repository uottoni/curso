@model Quiron.LojaVirtual.Web.Models.ProdutosViewModel
@using Quiron.LojaVirtual.Web.HtmlHelpers


@{
    ViewBag.Title = "ListarProdutos";
}



@foreach (var p in Model.Produtos)
{
    @Html.Partial("ProdutoDetalhes", p)
}
<div class="btn-group pull-right">
    @Html.PageLinks(Model.Paginacao, x => Url.Action("ListarProdutos", new { pagina = x, categoria = Model.CategoriaAtual }))
    
</div>
